{
  "name": "Booking",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "description": "ID of the booked event"
    },
    "event_title": {
      "type": "string",
      "description": "Title of the event"
    },
    "event_date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "event_time": {
      "type": "string",
      "description": "Event time"
    },
    "event_location": {
      "type": "string",
      "description": "Event location"
    },
    "user_email": {
      "type": "string",
      "description": "Email of the user who booked"
    },
    "user_name": {
      "type": "string",
      "description": "Name of the user"
    },
    "num_tickets": {
      "type": "number",
      "default": 1,
      "description": "Number of tickets booked"
    },
    "total_price": {
      "type": "number",
      "description": "Total booking price"
    },
    "booking_status": {
      "type": "string",
      "enum": [
        "Confirmed",
        "Cancelled",
        "Pending"
      ],
      "default": "Confirmed",
      "description": "Booking status"
    }
  },
  "required": [
    "event_id",
    "event_title",
    "event_date",
    "user_email",
    "num_tickets",
    "total_price"
  ]
}