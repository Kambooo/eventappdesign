{
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Full event description"
    },
    "category": {
      "type": "string",
      "enum": [
        "Music",
        "Sports",
        "Arts",
        "Family",
        "Food & Drink",
        "Business",
        "Technology",
        "Health",
        "Education",
        "Other"
      ],
      "description": "Event category"
    },
    "subcategory": {
      "type": "string",
      "description": "Event subcategory"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "time": {
      "type": "string",
      "description": "Event time"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "Event end date (for multi-day events)"
    },
    "location": {
      "type": "string",
      "description": "Event location/venue"
    },
    "city": {
      "type": "string",
      "description": "City"
    },
    "address": {
      "type": "string",
      "description": "Full address"
    },
    "price": {
      "type": "number",
      "description": "Ticket price"
    },
    "ticket_type": {
      "type": "string",
      "enum": [
        "Free",
        "Paid",
        "Donation"
      ],
      "default": "Paid",
      "description": "Ticket type"
    },
    "capacity": {
      "type": "number",
      "description": "Maximum number of attendees"
    },
    "organizer_name": {
      "type": "string",
      "description": "Name of event organizer"
    },
    "organizer_email": {
      "type": "string",
      "description": "Organizer contact email"
    },
    "organizer_phone": {
      "type": "string",
      "description": "Organizer phone number"
    },
    "image_url": {
      "type": "string",
      "description": "Main event image URL"
    },
    "banner_url": {
      "type": "string",
      "description": "Banner image for event details page"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Event tags for search"
    },
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "Published",
        "Cancelled",
        "Completed"
      ],
      "default": "Published",
      "description": "Event status"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Is this a featured event"
    },
    "attendees_count": {
      "type": "number",
      "default": 0,
      "description": "Number of people attending"
    }
  },
  "required": [
    "title",
    "category",
    "date",
    "time",
    "location",
    "city",
    "price",
    "ticket_type"
  ]
}